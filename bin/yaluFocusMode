#!/bin/bash

 #########
## Reset ##
 #########
	echo "DestroyMenu recreate windowFocusMode"
	echo "AddToMenu windowFocusMode \"Window Focus Mode\" Title"
	echo "AddToMenu windowFocusMode DynamicPopupAction PipeRead \"\$[YALU]/bin/yaluFocusMode\""

function printFocusMode {
	if [ "$1" == "$yaluFocusMode" ]; then
		icon="\$[YALU]/images/\$[yaluTheme]/radioButtonSel.\$[yaluImageType]"
	else
		icon="\$[YALU]/images/\$[yaluTheme]/radioButtonNorm.\$[yaluImageType]"
	fi
	echo "AddToMenu windowFocusMode \"%$icon%$2\" PipeRead \"\$[YALU]/bin/yaluConfig focusMode $1\""
} # function printFocusMode

 ###############
## Focus modes ##
 ###############
	printFocusMode "ClickToFocus" "Click To Focus (Windows Style)"
	printFocusMode "MouseFocus" "Focus Follows Mouse (FVWM Style)"
	printFocusMode "SloppyFocus" "Sloppy Focus (X Style)"
