#!/bin/bash
# Generates the menus required to configure window alt-resizing

# Generate a menu item
# Args: "MenuName" "Text" "yaluConfig Option" "value" "current value"
function generateChoice {
	if [ "$4" == "$5" ]; then
		icon="\$[YALU]/images/\$[yaluTheme]/radioButtonSel.\$[yaluImageType]"
	else
		icon="\$[YALU]/images/\$[yaluTheme]/radioButtonNorm.\$[yaluImageType]"
	fi
	echo "AddToMenu \"$1\" \"%$icon%$2\" PipeRead \"\$[YALU]/bin/yaluConfig $3 \\\"$4\\\"\""
} # function generateChoice


echo "DestroyMenu recreate altResizeConfig"
echo "AddToMenu altResizeConfig DynamicPopupAction PipeRead \"\$[YALU]/bin/yaluAltResizeConfig\""

generateChoice "altResizeConfig" "From Cursor" "resizeCorner" "Nop" "$yaluResizeCorner"
generateChoice "altResizeConfig" "From Top-Left" "resizeCorner" "WarpToWindow 0% 0%" "$yaluResizeCorner"
generateChoice "altResizeConfig" "From Top-Right" "resizeCorner" "WarpToWindow 100% 0%" "$yaluResizeCorner"
generateChoice "altResizeConfig" "From Bottom-Left" "resizeCorner" "WarpToWindow 0% 100%" "$yaluResizeCorner"
generateChoice "altResizeConfig" "From Bottom-Right" "resizeCorner" "WarpToWindow 100% 100%" "$yaluResizeCorner"
